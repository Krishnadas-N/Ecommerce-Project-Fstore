                    <span class="star" data-rating="3">â˜†</span>
                    <span class="star" data-rating="4">â˜†</span>
                    <span class="star" data-rating="5">â˜†</span>
                    <p>Selected Rating: <span id="selected-rating"></span> stars</p>
                    <% } %>
                   
                  </div>
                </div>
                <% }else{ %>
                  <div class="card-body m-4"  style="background-color: lightgray;">
                    <h3 class="h6">Only Delivered Users</h3>
                  </div>
                  <% } %>
              </div>
              
              
              <div class="card mb-4">
                <!-- Shipping information -->
                <% if(order.status === 'Delivered') { %>
                <div class="card-body">
                  <h3 class="h6" style="text-align: center;" >Add a Review</h3>
                  <% if(userReview!==null){ %>
                  <div id="thankyou-message" style=" font-size: 20px; text-align: center; padding-top:160px ;height: 350px;">Thank you for your review! ðŸ˜Š</div>
                  <% } else{ %>
